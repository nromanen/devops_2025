#!/usr/bin/env pwsh
echo "Hello task 5"

# test 1
param (
    [string]$FilePath
)

if (Test-Path $FilePath) {
    Get-Content $FilePath
} else {
    Write-Host "Error: File not found - $FilePath"
}

#test 2
param (
    [string]$InputString
)

$InputString -split " " | ForEach-Object { Write-Output $_ }

#test 3
$numFiles = 5
$logFile = "files.log"

Clear-Content $logFile -ErrorAction SilentlyContinue

for ($i = 0; $i -lt $numFiles; $i++) {
    $fileName = "file$i.txt"
    
    New-Item -ItemType File -Name $fileName -Force | Out-Null
    
    "The file '$fileName' has been created" | Out-File -Append -FilePath $logFile
    
}

Get-Content $logFile

Write-Output ""

